<div class="container py-5">
  <div class="devise-bootstrap-form">
    <div class="devise-bootstrap-form-row">
      <div class="devise-bootstrap-form-col col-md-7 col-10 mx-auto rounded p-md-5 p-4">
        <h2 class="text-center">Log in</h2>
        <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), inline_errors: true) do |f| %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password' %>
          
          <% if devise_mapping.rememberable? %>
            <%= f.form_group do %>
              <%= f.check_box :remember_me %>
            <% end %>
          <% end %>
          <div class="text-end">
            <%= render "devise/shared/links" %>
          </div>
          <%= f.form_group do %>
            <div class="text-center">
              <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
