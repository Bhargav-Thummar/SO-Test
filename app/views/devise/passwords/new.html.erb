<div class="mt-5">
  <div class="tab-content" id="myTabContent">
    <div aria-labelledby="home-tab" class="tab-pane fade show active p-3" id="profile" role="tabpanel">
      <div class="devise-bootstrap-form">
        <div class="devise-bootstrap-form-row">
          <div class="devise-bootstrap-form-col col-md-7 col-10 mx-auto rounded p-md-5 p-4 bg-white">
            <h2 class="text-center">
              Forgot Password?
            </h2>

            <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, inline_errors: true) do |f| %>
              <div class="row">
                <div class="col-12">
                  <%= f.text_field :email, label_class: "required", placeholder: "Email" %>
                </div>
              </div>
             <%= f.form_group do %>
                <%= f.submit "Send me reset password instructions", class: "btn btn-block btn-primary" %>
              <% end %>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>